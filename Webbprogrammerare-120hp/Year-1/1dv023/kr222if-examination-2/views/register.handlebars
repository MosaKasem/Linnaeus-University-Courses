<div class="container alert alert-secondary">

    <h1 class="border-primary alert alert-warning alert-dismissible fade show">{{ title }}</h1>
    {{#if success}}
    <section class="success">
        <h2 class="alert alert-primary">Success!</h2>
        <script>
            setTimeout(function () {
                // after 2 seconds
                window.location = "/login"
            }, 2000)
        </script>
    </section>
    {{else}} {{#if errors}}
    <section class="errors">
        <ul class="w-25 p-3">
            {{#each errors}}
            <p class="alert alert-primary">{{ this.msg }}</p>
            {{/each}}
        </ul>
    </section>

