<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href='/'>Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='/snippets'>View Snippets</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='/makeSnip'>Snippets</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navbar-right" href='/logout'>Logout</a>
            </li>
        </ul>
    </nav>
    <ul class="list-group">
        {{#each theSnippets}}
        <h1></h1>
        <li class="list-group-item">Snippet:
            <pre>{{ code }}</pre> Created at {{ createdAt }}
            <a href="/delete/{{id}}">Remove</a> Snippet By <strong>{{userID}}</strong>
            <a href="/edit/{{id}}">Edit</a>
            {{#if updatedAt}}
            <p> Edited By {{updatedAt}}</p>
            {{/if}}
        </li>
        {{/each}}
    </ul>
</div>

<a class="btn btn-primary btn-lg active" href="/makeSnip">Make Snippets!</a>